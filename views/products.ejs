<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('partials/csslinks') -%>
    <title>PECommerce</title>
    <style>
      .setWidth {
        width: 99vw !important;
      }
    </style>
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="#">PECommerce</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="/products">Products</a>
          </li>
          <li class="nav-item dropdown">
            <a
              class="nav-link dropdown-toggle"
              href="#"
              id="navbarDropdown"
              role="button"
              data-toggle="dropdown"
              aria-haspopup="true"
              aria-expanded="false"
            >
              Orders
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="/myorders">My Orders</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="/myproducts">My Products</a>
              <div class="dropdown-divider"></div>
              <a class="dropdown-item" href="/sellItem">Sell Item</a>
              <div class="dropdown-divider"></div>
            </div>
          </li>

          <li class="nav-item">
            <form action="/auth/logout" class="pt-1" method="post">
              <button class="btn btn-sm btn-light">Logout</button>
            </form>
          </li>
        </ul>
      </div>
    </nav>

    <!-- main section -->
    <!-- breadcrumb -->
    <div class="container">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/">Home</a></li>
          <li class="breadcrumb-item active" aria-current="page">Products</li>
        </ol>
      </nav>
    </div>

    <!-- Search Bar -->
    <form method="POST" action="/products/search" class="container my-4">
      <h3>Search Item</h3>
      <input
        class="form-control me-2"
        type="search"
        placeholder="Search"
        aria-label="Search"
        name="search"
      />
      <button class="btn btn-dark btn-outline-light" type="submit">
        Search
      </button>
    </form>

    <!-- Display Searched Items -->
    <div class="setWidth row justify-content-md-around">
      <%if(searchItems){ searchItems.forEach(item=>{%>
      <div class="card mb-3 col-12 col-md-5">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="<%= item.imgLink %>" alt="There must be an image" />
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= item.title %></h5>
              <p class="card-text"><%= item.description %></p>
              <p class="card-text"><%= item.new_price %></p>
              <a href="/products/view/<%= item.itemId %>" target="_blank"
                ><button class="btn btn-warning">View Item</button></a
              >
              <a href="/products/buy/<%= item.itemId %>"
                ><button class="btn btn-success">Add to cart</button></a
              >
            </div>
          </div>
        </div>
      </div>
      <%}) }%>
    </div>

    <!-- Display All Products -->
    <hr />
    <div class="row setWidth justify-content-center my-5">
      <h1>All Items</h1>
    </div>
    <div class="row setWidth justify-content-md-around">
      <%if(items){ items.forEach(item=>{%>
      <div class="card mb-3 col-12 col-md-5">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="<%= item.imgLink%>" alt="There must be an image" />
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h6 class="card-text font-italic font-weight-light">
                ItemID: <%= item.itemId %>
              </h6>
              <h5 class="card-title"><%= item.title %></h5>
              <p class="card-text">
                <%= item.description.substring(0,50)+'...' %>
              </p>
              <p class="card-text">
                <span class="font-italics font-weigth-light">Price: </span>
                <%= item.new_price %> â‚¹
              </p>

              <!-- Add href as /products/view/itemId 
            just view the item only without adding add to cart-->
              <a href="/products/view/<%= item.itemId%>" target="_blank"
                ><button class="btn btn-secondary">View Item</button></a
              >

              <!-- add href /products/buy/itemId
              update in items table(status) and add record in itemsBooked table
            after adding to cart , redirect user to / route -->
              <a href="/products/buy/<%= item.itemId%>"
                ><button class="btn btn-success">Add to cart</button></a
              >
            </div>
          </div>
        </div>
      </div>
      <%}) }%>
    </div>
    <!-- scripts -->
    <%- include('partials/scripts') -%>
  </body>
</html>
